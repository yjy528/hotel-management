<script src="/js/jquery-1.12.3.min.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/underscore.js"></script>
<script src="/js/PageNav.js"></script>
<script>
    $.get("/getAllRoomName",function(d){
        for(var i=0;i<d.results.length;i++){
            var opt=$("<option>"+d.results[i].category+"</option>");
            $(".category").append(opt);
        }
    })
    $('#Addbtn').click(function () {
        $.post("/addRoomInfo",{
            num : $(".num").val(),
            category : $(".category").val(),
            place : $(".place").val(),
            description : $(".description").val(),
            state : $("input[name=state]:checked").val(),
            // rentcount : 0
        },function(data){
            // console.log(data.result);
            if(data.result == 1){
                alert("添加成功！");
                $("input[type=text]").val("");
                var a=$(".category").val();
                var b=$("input[name=state]:checked").val();
                console.log(a,b);
                //更新种类表格的数量和剩余状态数量
                $.get("/updateCountTwo/"+a+"/"+b,function(d){
                    console.log(d.result);
                    window.location.reload();
                })
            }else if(data.result == -1){
                alert("提交失败，id被占用！");
            }else if(data.result == -2){6
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })

    //删除
    $("#removebtn").click(function () {
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/removeRoomInfo/" + sid,
                type : "delete",
                success : function(data){
                    if(data.result == 1){
                        alert("删除成功");
                        $(this).parents("tr").remove();
                        window.location.reload();
                        // window.location="/staff";
                    }else{
                        alert("服务器错误！");
                    }
                }
            });}
    })

    //更改页面
    $("#update").click(function () {
        // alert(kk)
        var radi=$("input[name=radio]:checked").val();
        if(radi==null){
            alert("什么也没选中!");
            return false;
        }else{
            var sid=$("input[name=radio]:checked").attr("data-id");
            $.ajax({
                url : "/updataRoomInfo/" + sid,
                type : "get",
                success : function(data){
                    // console.log(data.updata);
                    //     var dt=data.results
                    if(data.result == -1){
                        alert("服务器错误");
                    }else{
                        $('<form id="updatecar"></form>').html('<p><span>房间号：</span><input class="form-control" type="text" name="num" value="'+data.updata[0].num+'" ></p><p><span>房间类型：</span><input class="form-control" type="text" name="category" value="'+data.updata[0].category+'"></p><p><span>房间位置：</span><input class="form-control" type="text" name="place" value="'+data.updata[0].place+'"></p><p><span>房间描述：</span><input class="form-control" type="text" name="description" value="'+data.updata[0].description+'"></p><p><span>房间状态：</span>未入住<input type="radio" name="state" value="0"checked="checked">已预定<input type="radio" name="state" value="1">已入住<input type="radio" name="state" value="2" >').appendTo($("#bjyg"));
                    }
                }
            });}
    })



    // <select name="category" class="form-control category"><option value="'+data.updata[0].category+'"></option>

    //点击确认更改
    $('#bcgg').click(function () {
        var str=$('#updatecar').serialize();
        // console.log(str);
        // console.log(typeof str);
        var sid=$("input[name=radio]:checked").attr("data-id");
        $.post("/toupdataRoomInfo/" + sid,str,function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location.reload();
                // window.location = "/";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //close
    $('#togb').click(function () {
        $("#bjyg").html('');
    })

    $.get("/allRoomInfo?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);
    });
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();

        //获得新的数据
        $.get("/allRoomInfo?page=" + pagenumber,function(data){
            $.each(data.results,function(i, n){
                $tr = $("<tr></tr>");
                $("<td></td>").html('<input type="radio" name="radio" data-id="'+n._id+'"></td>').appendTo($tr);
                $("<td></td>").html(n.num).appendTo($tr);
                $("<td></td>").html(n.category).appendTo($tr);
                $("<td></td>").html(n.place).appendTo($tr);
                $("<td></td>").html(n.description).appendTo($tr);
                $("<td></td>").html(stateVal(n.state,$("<span></span>"))).appendTo($tr);
                $tr.appendTo($("#tbody"));
            });
        });
    }

    function stateVal(a,b){
        if(a==0){
            b.html("未入住");
        }else if(a==1){
            b.html("已预定");
        }else{
            b.html("已入住");
        }
        return b;
    }
</script>
</body>
