            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <div style="padding-bottom:5px;">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1" data-whatever="@mdo">增加房间</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal2" data-whatever="@fat" id="update">修改信息</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3" data-whatever="@getbootstrap">删除</button>
                <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal4" data-whatever="@getbootstrap">返回</button>-->
            </div>

            <!--增加新客户-->
            <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="exampleModalLabel">新增房间信息</h4>
                        </div>
                        <div class="modal-body">
                            <form id="addCarInfo">
                                <div class="row">
                                    <p class="col-lg-3">
                                        <span>房间号</span>
                                    </p>
                                    <p class="col-lg-8">
                                        <input type="text" name="num" class="form-control num">
                                    </p>
                                </div>
                                <div class="row">
                                    <p class="col-lg-3">
                                        <span>房间类型：</span>
                                    </p>
                                    <p class="col-lg-8">
                                        <!--<input type="text" class="form-control category">-->
                                        <select name="category" class="form-control category" >

                                        </select>
                                    </p>
                                </div>
                                <div class="row">
                                    <p class="col-lg-3">
                                        <span>房间位置：</span>

                                    </p>
                                    <p class="col-lg-8">
                                        <input type="text" name="place" class="form-control place" >
                                    </p>
                                </div>
                                <div class="row">
                                    <p class="col-lg-3">
                                        <span>房间描述：</span>

                                    </p>
                                    <p class="col-lg-8">
                                        <textarea name="description" class="form-control description" ></textarea>
                                    </p>
                                </div>
                                <div class="row">
                                    <p class="col-lg-3">
                                        <span>房间状态：</span>

                                    </p>
                                    <p class="col-lg-8">
                                        <!--<input type="text" name="price" class="form-control price" >-->
                                        未入住<input type="radio" name="state" value="0"checked="checked">
                                        已预定<input type="radio" name="state" value="1">
                                        已入住<input type="radio" name="state" value="2" >
                                    </p>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"  id="Addbtn">确认</button>
                            <button type="button" class="btn btn-primary">取消</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--修改信息-->
            <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="exampleModalLabel">修改房间信息</h4>
                        </div>
                        <div class="modal-body">
                            <div style="width: 70%;" id="bjyg"></div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" id="bcgg">确认</button>
                            <button type="button" class="btn btn-primary">取消</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--删除用户-->
            <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModal3">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            是否删除
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                            <button type="button" class="btn btn-primary" id="removebtn">YES</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--返回-->

            <!--客户信息表-->
            <div class="panel panel-default">
                <div class="panel-heading">房间信息表</div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th>房间号</th>
                        <th>房间类型</th>
                        <th>房间位置</th>
                        <th>房间描述</th>
                        <th>房间状态</th>
                    </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
                <div id="pagenavbox"></div>
            </div>
        </div>
    </div>
